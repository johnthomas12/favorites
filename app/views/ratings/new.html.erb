<!-- Validation failure messages -->
<% if @rating.errors.any? %>
  <% @rating.errors.full_messages.each do |message| %>
    <div class="alert alert-dismissable alert-danger">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <%= message %>
    </div>
  <% end %>
<% end %>

<div class="page-header">
  <h3>Add Rating</h3>
</div>

<div class="row">
  <div class="col-md-12">

    <form action="/create_rating" method="post">
      <!-- Hidden input for authenticity token to protect from forgery -->
      <input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>">



      <!-- Label and input for number -->

      <div class="form-group">
        <label for="number" class="control-label">
          Number
        </label>


        <input type="text" id="number" name="number" placeholder="Number" class="form-control" value="<%= @rating.number %>">

      </div>



      <!-- Label and input for user_id -->

      <div class="form-group">



        <input type="hidden" id="user_id" name="user_id" placeholder="User" class="form-control" value="<%= current_user.id %>">

      </div>



      <!-- Label and input for favorite_id -->

      <div class="form-group">
        <label for="favorite_id" class="control-label">
          Favorite
        </label>


        <input type="text" id="favorite_id" name="favorite_id" placeholder="Favorite" class="form-control" value="<%= @rating.favorite_id %>">

      </div>



      <button class="btn btn-success">
        Create Rating
      </button>
      or
      <a href="/ratings">Cancel</a>

    </form>

  </div>
</div>
